{
	"title": "Module",
	"$schema": "https://dotnet.github.io/docfx/schemas/v1.0/schema.json#",
	"version": "1.0.0",
	"description": "A Guided Learning Module.",
	"id": "https://github.com/MicrosoftDocs/schemas/blob/master/schemas/module.schema.json",
	"type": "object",
	"additionalProperties": false,
	"required": [
		"units",
		"abstract",
		"iconUrl",
		"levels",
		"products",
		"roles",
		"summary",
		"title",
		"uid"
	],
	"properties": {
		"abstract": {
			"description": "An overview of the tasks the module will ask the user to do.",
			"tags": [
				"localizable"
			],
			"type": "string",
			"contentType": "markdown"
		},
		"achievement": {
			"description": "The reference id for the achievement gained for completing this module.",
			"type": "string",
			"contentType": "xref"
		},
		"badge": {
			"required": [
				"uid"
			],
			"properties": {
				"uid": {
					"type": "string",
					"contentType": "uid"
				}
			},
			"type": "object"
		},
		"cardDescription": {
			"description": "The module summary, displayed in the content browser and in other areas where cards are used, like the Learn homepage.",
			"tags": [
				"localizable"
			],
			"type": "string",
			"contentType": "markdown"
		},
		"iconUrl": {
			"description": "The location of the icon image to use - can be a relative path in the docset or an absolute hyperlink.",
			"type": "string",
			"contentType": "href"
		},
		"isRatingEnabled": {
			"type": "string"
		},
		"levels": {
			"description": "A collection of levels that apply to this module.",
			"type": "array",
			"minItems": 1,
			"items": {
				"type": "string",
				"enum": [
					"advanced",
					"beginner",
					"intermediate"
				]
			}
		},
		"metadata": {
			"properties": {
				"description": {
					"type": "string",
					"tags": [
						"localizable"
					]
				},
				"title": {
					"type": "string",
					"tags": [
						"localizable"
					]
				}
			},
			"type": "object"
		},
		"prerequisites": {
			"description": "A description of the prerequisites for beginning this module.",
			"tags": [
				"localizable"
			],
			"type": "string",
			"contentType": "markdown"
		},
		"products": {
			"description": "A collection of products that apply to this module.",
			"type": "array",
			"minItems": 1,
			"items": {
				"type": "string",
				"enum": [
					"azure",
					"azure-active-directory",
					"azure-advisor",
					"azure-application-insights",
					"azure-cdn",
					"azure-clis",
					"azure-cloud-shell",
					"azure-container-instances",
					"azure-container-registry",
					"azure-cosmos-db",
					"azure-cost-management",
					"azure-event-grid",
					"azure-event-hubs",
					"azure-functions",
					"azure-iot-central",
					"azure-key-vault",
					"azure-log-analytics",
					"azure-monitor",
					"azure-portal",
					"azure-redis-cache",
					"azure-resource-manager",
					"azure-sdks",
					"azure-service-bus",
					"azure-sql-database",
					"azure-storage",
					"azure-virtual-machines",
					"bizapps",
					"bizapps-d365",
					"bizapps-flow",
					"bizapps-power-apps",
					"bizapps-power-bi",
					"common-data-service",
					"dynamics",
					"dynamics-ai-customer-service",
					"dynamics-ai-market-insights",
					"dynamics-ai-sales",
					"dynamics-business-central",
					"dynamics-customer-engagement",
					"dynamics-customer-service",
					"dynamics-field-service",
					"dynamics-finance-operations",
					"dynamics-layout",
					"dynamics-marketing",
					"dynamics-operations",
					"dynamics-project-service",
					"dynamics-remote-assist",
					"dynamics-retail",
					"dynamics-sales",
					"dynamics-talent",
					"flow",
					"power-bi",
					"power-platform",
					"powerapps",
					"vs",
					"vs-code",
					"windows"
				]
			}
		},
		"roles": {
			"description": "A collection of roles that apply to this module.",
			"type": "array",
			"minItems": 1,
			"items": {
				"type": "string",
				"enum": [
					"administrator",
					"business-analyst",
					"business-user",
					"developer",
					"functional-consultant",
					"solution-architect"
				]
			}
		},
		"summary": {
			"description": "The detailed summary of this module, appearing on the module landing page.",
			"tags": [
				"localizable"
			],
			"type": "string",
			"contentType": "markdown"
		},
		"title": {
			"description": "The module title.",
			"type": "string",
			"tags": [
				"localizable"
			]
		},
		"uid": {
			"description": "The module unique identifier.",
			"type": "string",
			"contentType": "uid"
		},
		"units": {
			"description": "A collection of references to module units that make up this module.",
			"type": "array",
			"minItems": 1,
			"items": {
				"type": "string",
				"contentType": "xref"
			}
		}
	},
	"metadata": "/metadata",
	"xrefProperties": [
		"title",
		"iconUrl",
		"summary"
	]
}